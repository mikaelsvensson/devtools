            <plugin>
                <groupId>info.mikaelsvensson.devtools</groupId>
                <version>1.0-SNAPSHOT</version>
                <artifactId>report</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>sitemap</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
-->
