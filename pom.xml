<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>info.mikaelsvensson.doclet</groupId>
    <artifactId>doclet</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>doclet</name>
    <url>http://www.mikaelsvensson.info</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <doclet>info.mikaelsvensson.doclet.XmlDoclet</doclet>
                    <docletArtifacts>
                        <docletArtifact>
                            <groupId>info.mikaelsvensson.doclet</groupId>
                            <artifactId>doclet</artifactId>
                            <version>1.0</version>
                        </docletArtifact>
                        <docletArtifact>
                            <groupId>net.sf.saxon</groupId>
                            <artifactId>Saxon-HE</artifactId>
                            <version>9.4</version>
                        </docletArtifact>
                    </docletArtifacts>
                    <additionalparam>
                        -format StandardDocumentCreator

                        -output1 ${project.build.outputDirectory}/index.html
                        -transformer1 ${project.build.testSourceDirectory}/../resources/multiple-files.xslt
                        -properties1 ${project.build.testSourceDirectory}/../resources/XsltParameters.properties

                        -output2 ${project.build.outputDirectory}/javadoc.xml
                    </additionalparam>
                    <useStandardDocletOptions>false</useStandardDocletOptions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.9</version>
        </dependency>
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.5.0</version>
            <scope>system</scope>
            <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
    </dependencies>
</project>
